# =============================================================================
# JustJeeps API - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=your_database_name
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}?schema=public

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
PORT=8080
NODE_ENV=development

# -----------------------------------------------------------------------------
# Authentication Configuration
# -----------------------------------------------------------------------------
# Set to 'true' to enable JWT authentication
ENABLE_AUTH=false

# JWT Secret - Use a strong, randomly generated string (min 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_min_32_chars_here

# JWT token expiration time
JWT_EXPIRES_IN=24h

# -----------------------------------------------------------------------------
# External API Keys
# -----------------------------------------------------------------------------
# Magento API Key
MAGENTO_KEY=your_magento_api_key_here

# -----------------------------------------------------------------------------
# Optional: Additional Vendor API Keys (if needed)
# -----------------------------------------------------------------------------
# TURN14_API_KEY=
# PREMIER_API_KEY=
# METALCLOAK_API_KEY=

# -----------------------------------------------------------------------------
# Email Configuration (for cron job notifications)
# -----------------------------------------------------------------------------
# Gmail credentials for sending notifications
# Note: Use an App Password, not your regular Gmail password
# Generate App Password: https://myaccount.google.com/apppasswords
EMAIL_USER=tessfbs@gmail.com
EMAIL_PASSWORD=yjgmr yxbe xkzy iyix


# Email recipient for cron job notifications
CRON_NOTIFICATION_EMAIL=tsantos@justjeeps.com
